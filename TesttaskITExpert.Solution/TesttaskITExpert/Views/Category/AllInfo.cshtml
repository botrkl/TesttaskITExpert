@model List<CategoryViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Category List</title>
    <link rel="stylesheet" href="~/css/allInfo-categories-style.css">
</head>
<body>
    @{
        await Html.RenderPartialAsync("_NavigationBar");
    }
    <div class="container">
        <h1>Category List</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Number of Films</th>
                    <th>Nested Level</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.FilmCount</td>
                        <td>@category.NestedLevel</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
