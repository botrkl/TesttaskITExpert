@model FilmModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Edit Film</title>
    <link rel="stylesheet" href="~/css/edit-film-style.css">
</head>
<body>
    <div class="container">
        <h2>Edit Film</h2>
        <form method="post" asp-action="EditFilm" class="edit-film-form">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="@Model.name" />
            </div>
            <div class="form-group">
                <label for="director">Director:</label>
                <input type="text" id="director" name="director" value="@Model.director" />
            </div>
            <div class="form-group">
                <label for="release">Release Date:</label>
                <input type="date" id="release" name="release" value="@Model.release.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" />
            </div>
        </form>
    </div>
</body>
</html>
